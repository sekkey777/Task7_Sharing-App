<%= stylesheet_link_tag 'rooms_index' %>


<div class='main-container'>

  <div class='search-box'>
    <div class='search-form'>
      <%= search_form_for @q do |f| %>
        <%= f.search_field :address_cont, placeholder: 'エリア', class: 'form' %>
        <%= f.search_field :room_name_cont, placeholder: 'フリーワード', class: 'form' %>
        <%= f.submit "検索", class: 'search-button' %>
      <% end %>
    </div>
  </div>

  <p class='result-text'><%= @count %>件が見つかりました</p>
  
  <div class='content'>
    <% @rooms.each do |room| %>
      <div class='card-box'>
        <%= link_to(new_reservation_path(id: room.id)) do%>
          <p><%= image_tag(room.image.variant(resize: 399)) if room.image.attached? %></p>
          <p class='room-name'><%= room.room_name %></p>
          <p class='room-address'><%= room.address %></p>
          <p class='usage-fee'>1人 ¥<%= room.usage_fee %> /日</p>
        <% end %>
      </div>
    <% end %>
  </div>

</div>

