<%= stylesheet_link_tag 'reservations_new' %>

<div class='main-container'>
  <div class='page-title'>この部屋を予約する</div>
  <div class='reservation-box'>
    <div class='left-box'>
      <p><%= image_tag(@post.image.variant(resize: 720)) if @post.image.attached? %></p>
      <p class='room-name'><%= @post.room_name %></p>
      <p class='room-address'><%= @post.address %></p>
      <p class='room-introduction'><%= @post.room_introduction %></p>
    </div>

    <div class='right-box'>
      <p class='usage-fee'>1人 ¥<%= @post.usage_fee %> /日</p>
      <%= form_with model: @reservation do |f| %>
        <div class='form-content'>
          <div class='label-box'>
            <%= f.label :starg, '開始日' %>
            <a class='required-text'>必須</a>
          </div>
          <div class='text-box'>
            <%= f.date_field :start, class: 'text-form' %>
          </div>
        </div>
        <div class='form-content'>
          <div class='label-box'>
            <%= f.label :end, '終了日' %>
            <a class='required-text'>必須</a>
          </div>
          <div class='text-box'>
            <%= f.date_field :end, class: 'text-form' %>
          </div>
        </div>
        <div class='form-content'>
          <div class='label-box'>
            <%= f.label :number_of_people, '人数' %>
            <a class='required-text'>必須</a>
          </div>
          <div class='text-box'>
            <%= f.text_field :number_of_people, class: 'text-form' %>
          </div>
        </div>
        <div class='form-content'>
          <div class='label-box'>
            <%= f.label :reserver, '予約者' %>
            <a class='required-text'>必須</a>
          </div>
          <div class='text-box'>
            <%= f.text_field :reserver, class: 'text-form' %>
          </div>
        </div>
        <div class='form-bottun'>
          <%= f.submit '予約する', class: 'submit-button' %>
        </div>
        <%= f.hidden_field :post_id, :value => @post.id %>
      <% end %>

      <div class='login-page'>
        <%= link_to '戻る', posts_path, class: 'login-page-button' %>
      </div>
    </div>

  </div>
</div>