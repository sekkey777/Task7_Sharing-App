<%= stylesheet_link_tag 'reservations_new' %>

<% if flash[:error].present? %>
  <% flash[:error].each do |message| %>
    <ul>
      <li><%= message %></li>
    </ul>
  <% end %>
<% end %>

<div class='main-container'>
  <div class='page-title'>この部屋を予約する</div>
  <div class='reservation-box'>
    <div class='left-box'>
      <p><%= image_tag(@post.image.variant(resize: 720)) if @post.image.attached? %></p>
      <p class='room-name'><%= @post.room_name %></p>
      <p class='room-address'><%= @post.address %></p>
      <p class='room-introduction'><%= @post.room_introduction %></p>

      <%= form_with model: @reservation do |f| %>
        <div class='form-content'>
          <div class='label-box'>
            <%= f.label :starg, '開始日' %>
            <a class='required-text'>必須</a>
          </div>
          <div class='text-box'>
            <%= f.date_field :start, readonly: true, class: 'text-form' %>
          </div>
        </div>
        <div class='form-content'>
          <div class='label-box'>
            <%= f.label :end, '終了日' %>
            <a class='required-text'>必須</a>
          </div>
          <div class='text-box'>
            <%= f.date_field :end, readonly: true, class: 'text-form' %>
          </div>
        </div>
        <div class='form-content'>
          <div class='label-box'>
            <%= f.label :number_of_people, '人数' %>
            <a class='required-text'>必須</a>
          </div>
          <div class='text-box'>
            <%= f.text_field :number_of_people, readonly: true, class: 'text-form' %>
          </div>
        </div>
        <div class='form-bottun'>
          <%= f.submit '予約する', class: 'submit-button' %>
        </div>
        <%= f.hidden_field :post_id, :value => @post.id %>
      <% end %>

      <p class='room-introduction'><%= @reservation.start %></p>
      <p class='room-introduction'><%= @reservation.end %></p>
      <p class='room-introduction'><%= @reservation.number_of_people %></p>
    </div>
    <%
=begin%>
 <%= link_to '登録する', posts_path, @reservation, method: :post, class: 'login-page-button' %> 
<%
=end%>
    <div class='login-page'>
        <%= link_to '戻る', posts_path, class: 'login-page-button' %>
      </div>
  </div>
</div>