<%= stylesheet_link_tag 'home_index' %>

<div class='main-container'>
  <div class='page-title'>登録済みルーム一覧</div>

  <div class='content'>
    <% @posts.each do |post| %>
      <div class='card-box'>
        <%= link_to(new_reservation_path(id: post.id)) do%>
          <p><%= image_tag(post.image.variant(resize: 299)) if post.image.attached? %></p>
          <p class='room-name'><%= post.room_name %></p>
          <p class='room-address'><%= post.address %></p>
          <p class='usage-fee'>1人 ¥<%= post.usage_fee %> /日</p>
        <% end %>
      </div>
    <% end %>
  </div>

</div>

